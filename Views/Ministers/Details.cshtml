@model ministers_of_sweden.web.ViewModels.MinisterDetailModel
    
    
      
    <article class="page">
    <section class="vehicle-detail-container">
        <div class="vehicle-detail">
            <span class="back-icon">
                <a asp-action="index"><span><i class="fa-regular fa-arrow-left-long"></i> Tillbaka</span></a>
            </span>
            <h2 class="vehicle-detail-header">@Model.Name - @Model.Type</h2>
            <img src="@Model.ImageUrl" alt="@Model.Name">
            <div class="vehicle-detail-info">
                <span><strong>Department</strong></span>
                <span>@Model.Department</span>
                <span><strong>Party Affiliation</strong></span>
                <span>@Model.Party</span>
                <span><strong>Birth Year</strong></span>
                <span>@Model.Born</span>
                <span><strong>Academic Field</strong></span>
                <span>@Model.AcademicField </span>
                  <span><strong>Academic Degree?</strong></span>
                <span>@Model.HasAcademicDegree</span>
            </div>
           
            <div></div>
        </div>
    </section>
</article>